JAVASCRIPT -

function convertTemperature() {
    const tempInput = document.getElementById('tempInput').value;
    const unitSelect = document.getElementById('unitSelect').value;
    const resultElement = document.getElementById('convertedTemp');
  
    if (isNaN(tempInput) || tempInput === '') {
      resultElement.innerHTML = 'Please enter a valid number.';
      return;
    }
  
    const temp = parseFloat(tempInput);
  
    let celsius, fahrenheit, kelvin;
  
    if (unitSelect === 'Celsius') {
      fahrenheit = (temp * 9/5) + 32;
      kelvin = temp + 273.15;
      resultElement.innerHTML = `${temp}°C = ${fahrenheit.toFixed(2)}°F = ${kelvin.toFixed(2)}K`;
    } else if (unitSelect === 'Fahrenheit') {
      celsius = (temp - 32) * 5/9;
      kelvin = celsius + 273.15;
      resultElement.innerHTML = `${temp}°F = ${celsius.toFixed(2)}°C = ${kelvin.toFixed(2)}K`;
    } else if (unitSelect === 'Kelvin') {
      celsius = temp - 273.15;
      fahrenheit = (celsius * 9/5) + 32;
      resultElement.innerHTML = `${temp}K = ${celsius.toFixed(2)}°C = ${fahrenheit.toFixed(2)}°F`;
    }
  }

  document.getElementById('convertBtn').addEventListener('click', convertTemperature);
  
